<h1>Index Page</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" id="completed" <%= "checked" if task.completed %>>
      <%= link_to "#{task.title}", task_path(task) %>
      <%= link_to "Bin", task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<p><%= link_to 'Create a new post', tasks_new_path %></p>
